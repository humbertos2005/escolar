    .logo { max-height: 110px; display:block; margin: 2px auto 2px; } /* logo mais próximo do topo */
    .cabecalho .linha { font-size: 16px; margin: 0px; font-weight: 600; letter-spacing: 0.2px; }
    .cabecalho .escola { font-weight: 600; font-size: 16px; margin: 0px; }

    /* separador entre cabeçalho e título */
    .header-sep {
      width: 52%;
      height: 1px;
      background: #222;
      margin: 8px auto 8px;
      border: none;
    }

    h3.title { text-align:center; margin-top: 4px; margin-bottom: 4px; font-size: 16pt; font-weight:800; }

    /* Espaçador entre título e parágrafo principal (duas linhas visuais) */
    .espacador-apos-titulo { height: 28px; } /* aumento para 2 linhas visuais */

    /* Conteúdo principal */
    .conteudo { text-align: justify; text-justify: inter-word; margin-top: 4px; line-height: 1.45; font-size: 12.5pt; }
    .conteudo p { margin: 0 0 12px 0; }

    /* Assinaturas: aproximar do corpo e layout flexível */
    .assinaturas { display:flex; justify-content:space-around; margin-top:16mm; flex-wrap:wrap; gap:12px; }
    .assinatura-campo { width:30%; min-width:160px; text-align:center; box-sizing:border-box; }
    .linha-assinatura { border-top:1px solid #111; height: 1px; margin-bottom:8px; margin-left:10px; margin-right:10px; }
    .assinatura-campo p { font-weight:bold; margin:0; font-size: 12pt; }
    .assinatura-cargo { font-weight:normal; font-size:0.9em; color:#666; margin-top:4px; }

    @media print {
      body { margin: 6mm; }
      .assinaturas { gap: 8px; margin-top: 14mm; }
      .espacador-apos-titulo { height: 26px; }
    }
